RewriteEngine On

# Verwijder trailing slash voor schonere URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Zoek eerst naar .html, dan .php bestanden (zonder extensie in URL)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ $1.html [L,E=FOUND:1]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Redirect directe toegang naar extensieloze URLs
RewriteCond %{THE_REQUEST} /([^.]+)\.(html|php)[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]
